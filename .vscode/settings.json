{
  "explorer.excludeGitIgnore": true,
  "files.watcherExclude": {
    "**/.fvm": true
  },
  "files.readonlyInclude": {
    "**/*.g.dart": true,
    "**/*.freezed.dart": true,
    "**/*.gr.dart": true,
    "**/*.config.dart": true
  },
  "js/ts.implicitProjectConfig.checkJs": false,
  "eslint.workingDirectories": [
    "flutter_readium/assets/_helper_scripts/"
  ],
  "dart.lineLength": 120,
  "[dart]": {
    "editor.rulers": [
      120
    ],
  },
  "cSpell.enabledFileTypes": {
    "dart": true,
  },
  "cSpell.ignorePaths": [
    "**/.pub-cache/**",
    "**/pubspec.lock",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    "**/assets/l10n/**",
    "!**/assets/l10n/**/da.yaml",
    "**/assets/feeds/**",
    "**/project.pbxproj",
    "**/Podfile.lock"
  ],
  "cSpell.language": "en,da,sv",
  "cSpell.words": [
    "androidx",
    "epub",
    "Epub",
    "EPUB",
    "kotlin",
    "kotlinx",
    "podfile",
    "podspec",
    "Prefs",
    "readium"
  ]
}
